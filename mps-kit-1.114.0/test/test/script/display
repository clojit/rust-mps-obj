#!/usr/bin/perl -w
# $Id: //info.ravenbrook.com/project/mps/version/1.114/test/test/script/display#1 $
#
# provide a subroutine to pretty-print tests to a
# output stream
#

1;

sub display_test_source {
 local ($file, $stream, $width) = @_;

 unless (open(IN, $file)) {
  die "File ".$infile." unexpectedly not found.\n";
 }

 $l = "";

 while (<IN>) {
  print $stream $_;
 }

 close(IN);
}

